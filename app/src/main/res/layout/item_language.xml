<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimen_5dp"
        android:padding="@dimen/dimen_5dp">

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/medium"
            android:gravity="center|left"
            app:layout_constraintBottom_toBottomOf="@id/im_avatar"
            android:maxLines="1"
            android:padding="@dimen/_15sdp"
            android:paddingStart="@dimen/_20sdp"
            android:text="@string/language"
            android:textColor="#232323"
            android:textSize="@dimen/dimen_20sp"
            app:layout_constraintLeft_toRightOf="@id/im_avatar"
            app:layout_constraintTop_toTopOf="@id/im_avatar"
            tools:ignore="RtlSymmetry" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_avatar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_nc_anh"
            app:civ_border_color="#FF000000"
            android:layout_marginStart="@dimen/_10sdp"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/im_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:src="@drawable/ic_task"
            app:layout_constraintBottom_toBottomOf="@id/tv_language"
            app:layout_constraintRight_toRightOf="@id/tv_language"
            app:layout_constraintTop_toTopOf="@id/tv_language" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>