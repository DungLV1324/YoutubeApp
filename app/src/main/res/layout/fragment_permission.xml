<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232325">

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:ellipsize="end"
            android:fontFamily="@font/medium"
            android:maxLines="1"
            android:padding="@dimen/dimen_5dp"
            android:text="@string/go"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           />

        <ImageView
            android:id="@+id/img_avt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_permission"
            app:layout_constraintDimensionRatio="2.5:2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tv_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:maxLines="1"
            android:padding="3dp"
            android:text="@string/permission"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/img_avt"
            app:layout_constraintRight_toRightOf="@id/imAudioPermission"
            app:layout_constraintTop_toBottomOf="@id/img_avt"
            tools:ignore="Dung" />

        <TextView
            android:id="@+id/tv_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:fontFamily="@font/medium"
            android:maxLines="1"
            android:padding="3dp"
            android:text="@string/audio"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_30sdp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/img_avt"
            app:layout_constraintRight_toLeftOf="@id/imAudioPermission"
            app:layout_constraintTop_toBottomOf="@id/tv_permission"
            tools:ignore="Dung" />

        <ImageView
            android:id="@+id/imAudioPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_30sdp"
            android:padding="@dimen/dimen_10dp"
            android:src="@drawable/ic_off"
            app:layout_constraintBottom_toBottomOf="@id/tv_audio"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_audio"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tv_name_thong_bao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:fontFamily="@font/medium"
            android:maxLines="1"
            android:padding="3dp"
            android:text="@string/notification"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_audio"
            app:layout_constraintRight_toLeftOf="@id/imAudioPermission"
            app:layout_constraintTop_toBottomOf="@id/imAudioPermission"
            tools:ignore="Dung" />

        <ImageView
            android:id="@+id/imNotificationPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:src="@drawable/ic_off"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_thong_bao"
            app:layout_constraintRight_toRightOf="@id/imAudioPermission"
            app:layout_constraintTop_toTopOf="@id/tv_name_thong_bao"
            android:importantForAccessibility="no" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>